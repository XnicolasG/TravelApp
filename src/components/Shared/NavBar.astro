---
import Dark from "../../../public/svg/Dark.astro";
import Search from "../../../public/svg/Search.astro";


const Anchors = [
    {
        name: "Home",
        tag: "home",
    },
    {
        name: "Recomendations",
        tag: "recomendations",
    },
    {
        name: "Trends",
        tag: "trend",
    },
    {
        name: "FAQS",
        tag: "faqs",
    },
];
---

<nav class="hidden p-4 sm:flex justify-between gap-x-10 bg-black text-white sticky top-0 z-30 w-full">
    <div class="flex items-center w-1/3">
        <h1
            class="font-bold text-xl bg-gradient-to-r from-blue-400 to-emerald-400 text-transparent bg-clip-text inline-block"
        >
            TravelApp
        </h1>
    </div>
    <section class="flex justify-between items-center gap-x-4 w-1/3">
        {
            Anchors.map((item) => (
                <a class="font-semibold hover:text-primary focus:text-primary transition-all duration-150" href={`#${item.tag}`}>
                    {item.name}
                </a>
            ))
        }
    </section>
    <section class="flex items-center pl-4 justify-center gap-x-6 w-1/3">
        <button >
            <Search  class="size-5" />
        </button>
         <button id="darkModeBtn" class="group size-7 rounded-full flex justify-center items-center bg-slate-200 dark:text-gray-950 ring hover:ring-blue-700 dark:hover:ring dark:hover:ring-amber-500 transition-all">
            <Dark class="size-5 text-blue-700  dark:text-amber-500 " />
        </button>
    </section>
</nav>
<script>
    document.getElementById('darkModeBtn')?.addEventListener('click', () => {
        if (localStorage.theme == 'dark') {
            localStorage.theme = 'light';
            document.documentElement.classList.remove('dark');
        }else{
            localStorage.theme = 'dark';
            document.documentElement.classList.add('dark');
        }
    })
</script>
