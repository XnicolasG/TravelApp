---
import { Image } from "astro:assets";
import SanFraciscoDesktop from "../../../public/img/sanFranciscoDesktop.jpg";
---

<main id="home"  class="w-full h-auto">
    <section class="home">
        <div class="w-full relative h-3/4">
            <div
                class="w-full h-full flex flex-col py-4 pb-8 absolute top-1 items-center justify-between md:justify-around"
            >
                <input
                    type="search"
                    class="w-58 outline-none rounded-full text-center py-1 px-2 shadow  focus:ring-2 focus:w-64 transition-all duration-300"
                    placeholder="San Francisco"
                    name=""
                    id=""
                />
                <button
                    class="w-36 font-semibold rounded-full p-1 shadow bg-white text-md text-primary px-2 transition-all duration-300 ease-in-out hover:bg-primary
                     hover:text-white transform hover:-translate-y-1 hover:scale-110 "
                >
                    Explore more
                </button>
            </div>
            <div class="w-full h-full ">
                <Image class='' src={SanFraciscoDesktop} alt="SF" />
                <div class="absolute inset-x-0 bottom-0 h-32 bg-gradient-to-b from-transparent to-[#13151a]"></div>
            </div>
        </div>
    </section>
</main>
